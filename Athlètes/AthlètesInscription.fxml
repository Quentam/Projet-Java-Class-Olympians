<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane layoutX="25.0" prefHeight="720.0" prefWidth="1255.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.isep.algo.classolympians.AthlètesInscriptionController">

    <stylesheets>
        <URL value="@ClassOlympians.css" />
    </stylesheets>

    <!-- Background Image -->
    <ImageView fx:id="backgroundImage" fitHeight="725.0" fitWidth="1250.0" layoutX="5.0" opacity="0.6" pickOnBounds="true" preserveRatio="false">
        <image>
            <Image url="@Images/Athlètes.png" />
        </image>
    </ImageView>
    <ToolBar layoutX="-25.0" prefHeight="725.0" prefWidth="93.0" style="-fx-background-color: grey;" />

    <!-- Sidebar with Icons -->
    <VBox layoutX="-14.0" layoutY="38.0" spacing="20">
        <children>
            <Button fx:id="HomeButton" onAction="#handleHomeButton" style="-fx-background-color: white;" styleClass="icon-button" textAlignment="CENTER" textFill="#b54444">
                <graphic>
                    <ImageView fitHeight="44.0" fitWidth="53.0">
                        <image>
                            <Image url="@Images/LogoAccueil.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="athletesButton" onAction="#handleAthletesButton" style="-fx-background-color: blue;" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="53.0" fitWidth="50.0">
                        <image>
                            <Image url="@Images/LogoAthlètes.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="DisciplinesButton" onAction="#handleDisciplinesButton" style="-fx-background-color: darkblue;" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="51.0" fitWidth="50.0">
                        <image>
                            <Image url="@Images/LogoDisciplines.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="EventsButton" onAction="#handleEventsButton" style="-fx-background-color: red;" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="44.0" fitWidth="40.0">
                        <image>
                            <Image url="@Images/LogoEvènements.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="ResultsButton" onAction="#handleResultsButton" style="-fx-background-color: orange;" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="51.0" fitWidth="50.0">
                        <image>
                            <Image url="@Images/LogoRésultats.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="ReportsButton" onAction="#handleReportsButton" style="-fx-background-color: green;" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="44.0" fitWidth="40.0">
                        <image>
                            <Image url="@Images/LogoRapports.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </children>
    </VBox>

    <!-- Logo in the top right corner -->
    <ImageView fx:id="logoImage" fitHeight="100.0" fitWidth="100.0" layoutX="1154.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@Images/LogoJO.png" />
        </image>
    </ImageView>

    <!-- Main Content -->
    <VBox alignment="CENTER" layoutX="415.0" layoutY="200.0" spacing="20">
        <children>

            <!-- Form Section -->
            <VBox prefHeight="353.0" prefWidth="430.0" spacing="10" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-padding: 20;">
                <children>
                    <Label styleClass="form-label" text="Nom" />
                    <HBox spacing="10">
                        <TextField fx:id="nomField" prefHeight="25.0" prefWidth="330.0" promptText="Saisissez votre nom" />
                    </HBox>
                    <Label styleClass="form-label" text="Prénom" />
                    <HBox spacing="10">
                        <TextField fx:id="prenomField" prefHeight="25.0" prefWidth="330.0" promptText="Saisissez votre prénom" />
                    </HBox>
                    <Label styleClass="form-label" text="Pays" />
                    <HBox spacing="10">
                        <TextField fx:id="paysField" prefHeight="25.0" prefWidth="330.0" promptText="Saisissez votre pays de résidence" />
                    </HBox>
                    <Label styleClass="form-label" text="Âge" />
                    <HBox spacing="10">
                        <TextField fx:id="ageField" prefHeight="25.0" prefWidth="330.0" promptText="Saisissez votre âge" />
                    </HBox>
                    <Label styleClass="form-label" text="Discipline" />
                    <HBox spacing="10">
                        <TextField fx:id="disciplineField" prefHeight="25.0" prefWidth="330.0" promptText="Saisissez votre discipline sportive" />
                    </HBox>
                </children>
            </VBox>

            <Button fx:id="enregistrerButton" styleClass="register-button" text="Enregistrer l'athlète" />
        </children>
    </VBox>
    <Label layoutX="580.0" layoutY="52.0" styleClass="main-title" text="Athlètes" />
    <Label layoutX="490.0" layoutY="100.0" styleClass="subtitle" text="Enregistrer un athlète aux J.O. 2024" />
</AnchorPane>
