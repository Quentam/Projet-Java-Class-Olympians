<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane layoutX="25.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.isep.algo.classolympians.AthlètesAccueilController">

    <stylesheets>
        <URL value="@ClassOlympians.css" />
    </stylesheets>

    <!-- Background Image -->
    <ImageView fx:id="backgroundImage" fitHeight="700.0" fitWidth="1250.0" layoutX="-25.0" layoutY="25.0" opacity="0.6" pickOnBounds="true" preserveRatio="false">
        <image>
            <Image url="/fr/isep/algo/classolympians/Images/Athlètes.png" />
        </image>
    </ImageView>
    <ToolBar layoutX="-25.0" layoutY="14.0" prefHeight="709.0" prefWidth="93.0" style="-fx-background-color: grey;" />

    <!-- Sidebar with Icons -->
    <VBox layoutX="-11.0" layoutY="31.0" spacing="20">
        <children>
            <Button fx:id="HomeButton" style="-fx-background-color: white;" styleClass="icon-button" textAlignment="CENTER" textFill="#b54444">
                <graphic>
                    <ImageView fitHeight="44.0" fitWidth="53.0">
                        <image>
                            <Image url="/fr/isep/algo/classolympians/Images/LogoAccueil.png" />
                        </image>
                    </ImageView>
                </graphic></Button>
            <Button fx:id="athletesButton" style="-fx-background-color: blue;" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="53.0" fitWidth="50.0">
                        <image>
                            <Image url="/fr/isep/algo/classolympians/Images/LogoAthlètes.png" />
                        </image>
                    </ImageView>
                </graphic></Button>
            <Button fx:id="DisciplinesButton" style="-fx-background-color: darkblue;" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="51.0" fitWidth="50.0">
                        <image>
                            <Image url="/fr/isep/algo/classolympians/Images/LogoDisciplines.png" />
                        </image>
                    </ImageView>
                </graphic></Button>
            <Button fx:id="EventsButton" style="-fx-background-color: red;" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="44.0" fitWidth="40.0">
                        <image>
                            <Image url="/fr/isep/algo/classolympians/Images/LogoEvènements.png" />
                        </image>
                    </ImageView>
                </graphic></Button>
            <Button fx:id="ResultsButton" style="-fx-background-color: orange;" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="51.0" fitWidth="50.0">
                        <image>
                            <Image url="/fr/isep/algo/classolympians/Images/LogoRésultats.png" />
                        </image>
                    </ImageView>
                </graphic></Button>
            <Button fx:id="ReportsButton" style="-fx-background-color: green;" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="44.0" fitWidth="40.0">
                        <image>
                            <Image url="/fr/isep/algo/classolympians/Images/LogoRapports.png" />
                        </image>
                    </ImageView>
                </graphic></Button>
        </children>
    </VBox>

    <!-- Logo in the top right corner -->
    <ImageView fx:id="logoImage" fitHeight="100.0" fitWidth="100.0" layoutX="1082.0" layoutY="31.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="/fr/isep/algo/classolympians/Images/LogoJO.png" />
        </image>
    </ImageView>

    <!-- Main Content -->
    <VBox alignment="CENTER" layoutX="320.0" layoutY="59.0" spacing="20">
        <children>
            <Label alignment="CENTER" contentDisplay="CENTER" styleClass="main-title" text="Athlètes" textAlignment="CENTER" />
            <Label style="-fx-font-weight: Bold;" styleClass="subtitle" text="Rechercher des sportifs et consulter les informations des différents inscrits" />
        </children>
    </VBox>
    <HBox alignment="CENTER" layoutX="395.0" layoutY="315.0" prefHeight="36.0" prefWidth="478.0" spacing="10">
        <TextField fx:id="athleteNameField" prefHeight="36.0" prefWidth="344.0" promptText="Saisissez le nom d'un athlète" />
        <Button fx:id="addButton" text="+" />
    </HBox>
    <VBox fx:id="athleteList" layoutX="395.0" layoutY="365.0" prefHeight="300.0" prefWidth="478.0" spacing="10" style="-fx-background-color: white; -fx-padding: 10;">
        <!-- Items will be added here dynamically -->
    </VBox>
</AnchorPane>
